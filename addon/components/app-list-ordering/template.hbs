<div class="btn-group">
	{{#unless (eq index 0)}}
	<button class="btn btn-sm btn-success" disabled={{updatingOrder}} {{action "order" "up" index model}}>
		<span class="glyphicon glyphicon-chevron-up"></span>
	</button>
	{{/unless}}
	
	{{#if canOrderHierarchy}}
		{{#if (get model hasParent)}}
		<button class="btn btn-sm btn-warning" disabled={{updatingOrder}} {{action "order" "left" index model }}>
			<span class="glyphicon glyphicon-chevron-left"></span>
		</button>
		{{/if}}
		
		{{#unless (eq index 0)}}
		<button class="btn btn-sm btn-warning" disabled={{updatingOrder}} {{action "order" "right" index model}}>
			<span class="glyphicon glyphicon-chevron-right"></span>
		</button>
		{{/unless}}
	{{/if}}


	{{#unless isLast}}
	<button class="btn btn-sm btn-danger" disabled={{updatingOrder}} {{action "order" "down" index model}}>
		<span class="glyphicon glyphicon-chevron-down"></span>
	</button>
	{{/unless}}
</div>