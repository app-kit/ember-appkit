<div class="app-form-relationship">
	{{#if loading}}
		<div class="" style="position: relative;">
			{{ember-spinner}}
		</div>
	{{else}}
		{{#if error}}
			<div class="alert alert-danger">
				{{error}}
			</div>
		{{else}}
			{{#if many}}
			<div class="form-group">
		    <label class="col-sm-2 control-label">{{label}}</label>
		    <div class="col-sm-10">
					<div class="select-wrap">
						{{#each options as |option|}}
						<label class="checkbox">
							{{#if option.enabled}}
								<input checked="checked" type="checkbox" value={{option.key}} onclick={{action "itemSelected" option.key}} /> {{option.label}}
							{{else}}
								<input type="checkbox" value={{option.key}} onclick={{action "itemSelected" option.key}} /> {{option.label}}
							{{/if}}
						</label>
						{{/each}}
					</div>
		    </div>
		  </div>
			{{else}}
		  	<div class="form-group">
		  		<label for="">{{label}}</label>
					
					<select name="" id="" class="form-control" {{action "optionSelected" on="change"}}>
						<option value=""></option>
						{{#each options as |option|}}
						<option value="{{option.key}}" selected={{option.enabled}}>{{option.label}}</option>
						{{/each}}
					</select>
		  	</div>
			{{/if}}
		{{/if}}
	{{/if}}

</div>
